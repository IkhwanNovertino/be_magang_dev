<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<%- include('../../partials/sidebar.ejs') %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Bidang Kegiatan</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/biro">Bidang kegiatan</a></li>
            <li class="breadcrumb-item active">Tambah bidang kegiatan</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <!-- left column -->
        <div class="col-md-12">
          <!-- general form elements -->
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form Tambah Bidang Kegiatan</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/biro/create" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label for="name">Nama Bidang Kegiatan</label>
                  <input type="text" class="form-control" name="name" id="name" placeholder="Isi bidang kegitan" required>
                </div>
              </div>
              <!-- /.card-body -->
              <div class="card-footer">
                <a href="/biro" class="btn btn-default mr-1">
                  Kembali
                </a>
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
          <!-- /.card -->
        </div>
        <!--/.col (left) -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

